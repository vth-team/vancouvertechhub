<div class="company-name col-lg-9 col-md-9 col-sm-12 col-xs-12">
  <h1><%= @organization.name %></h1>
  <p><%= @organization.address %></p>
  <p><%= @organization.overview %></p>

  <%= render "org_info"%>




  <!-- Company "Avatar" -->
  <% if @organization.image.present? %>
    <%= image_tag @organization.image.url(:large) %>
  <% end %>


      var map = new google.maps.Map(document.getElementById('map-org'), {
        center: orgLocation,
        scrollwheel: false,
        zoom: 13
      });
      // Create a marker and set its position.
      var marker = new google.maps.Marker({
        map: map,
        position: orgLocation,

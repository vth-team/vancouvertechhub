// Lucas Search
var search = function(){
  $(".search").on("keyup", function(event){
    // event.preventDefault()
    var word = $('input:text').val().toLowerCase();
    $('.event').hide();
      $(".event").each(function(){
        var fil = $(this).find("a").text().toLowerCase();
        if(fil.search(word)>-1){
          $(this).show()
      }
    })
  })
}

<%= form_for @user, url: password_change_path(@user.id), class: "form-horizontal" do |f| %>
  <div class="form-group row">
    <%= f.label "Old Password", class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.password_field :old_password %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "New Password", class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "New Password Confirmation", class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>


  <div class = "form-group row">
    <%= f.submit "Update Password", class: "btn btn-primary col-md-offset-2" %>
    </div>
<% end  %>

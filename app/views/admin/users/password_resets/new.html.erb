<h1>Reset Password</h1>
<%= form_tag password_resets_path, class: "form-horizontal" do %>
  <div class="form-group row">
    <%= label_tag :email, nil, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= email_field_tag :email, nil, class: "form-control" %>
    </div>
  </div>
  <br>
  <div class="form-group row">
    <%= submit_tag "Email me Reset Instructions", class: "btn btn-primary col-md-offset-2" %>
  </div>
<% end %>

<h1>Enter a new password</h1>

<%= render "users/user_errors" %>

<%= form_for @user, url: password_reset_path(@user.password_reset_token), class: "form-horizontal" do |f| %>
  <div class="form-group row">
    <%= f.label :password, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.submit class: "btn btn-primary col-md-offset-2" %>
  </div>

<% end %>
